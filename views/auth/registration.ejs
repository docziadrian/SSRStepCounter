<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>StepSetGo - Regisztrálj!</title>
  <link rel="stylesheet" href="../../src/css/landing.css" />
  <link rel="stylesheet" href="../../src/css/output.css" />
</head>

<%- include('../navbar/navbar') %>

<section
  class="relative -mt-24 w-full min-h-screen flex items-center justify-center overflow-hidden pt-20 pb-12 px-4 sm:px-6 lg:px-8 bg-[#31363F]"
>
  <!-- BG image -->
  <div class="absolute inset-0 z-0">
    <img
      src="../src/images/hatter.png"
      alt="Background"
      class="w-full h-full xl:max-w-[70%] object-cover"
    />
    <div class="absolute inset-0 hero-gradient bg-pattern"></div>
  </div>

  <!-- Mobile BG image -->
  <div class="absolute inset-0 z-0 xl:hidden">
    <img
      src="../src/images/hattermobile.png"
      alt="Background"
      class="w-full h-full xl:max-w-[70%] object-cover"
    />
    <div class="absolute inset-0 hero-gradient bg-pattern"></div>
  </div>

  <div
    class="relative z-10 w-full max-w-7xl mx-auto flex flex-col lg:flex-row items-center gap-8 lg:gap-32 mt-16"
  >
    <!-- Form Section -->
    <section
      id="registrationSection"
      class="w-full max-w-xl bg-white/95 backdrop-blur-sm rounded-2xl shadow-2xl p-6 sm:p-8 lg:p-10 border border-[#76ABAE]/20"
    >
      <div class="text-center mb-8">
        <h2 class="text-3xl sm:text-4xl font-bold text-[#222831] mb-2">
          Csatlakozz hozzánk!
        </h2>
        <p class="text-[#31363F]/70 text-sm sm:text-base">
          Regisztrálj és kezdd el az egészségesebb életet
        </p>
      </div>

      <form action="/users/registration" method="POST" class="space-y-5">
        <!-- Teljes Név -->
        <div>
          <label
            for="fullname"
            class="block text-sm font-semibold text-[#222831] mb-2"
          >
            Teljes neved
          </label>
          <input
            type="text"
            id="fullname"
            name="fullname"
            class="w-full px-4 py-3 bg-white border-2 border-[#76ABAE]/30 rounded-xl text-[#222831] placeholder-[#31363F]/40 focus:outline-none focus:ring-2 focus:ring-[#76ABAE] focus:border-transparent transition-all"
            placeholder="Pl.: Nagy Béla"
          />
        </div>

        <!-- Email -->
        <div>
          <label
            for="email"
            class="block text-sm font-semibold text-[#222831] mb-2"
          >
            Email cím
          </label>
          <input
            type="email"
            id="email"
            name="email"
            class="w-full px-4 py-3 bg-white border-2 border-[#76ABAE]/30 rounded-xl text-[#222831] placeholder-[#31363F]/40 focus:outline-none focus:ring-2 focus:ring-[#76ABAE] focus:border-transparent transition-all"
            placeholder="pelda@email.com"
          />
        </div>

        <!-- Jelszó -->
        <div>
          <label
            for="password"
            class="block text-sm font-semibold text-[#222831] mb-2"
          >
            Jelszó
          </label>
          <input
            type="password"
            id="password"
            name="password"
            class="w-full px-4 py-3 bg-white border-2 border-[#76ABAE]/30 rounded-xl text-[#222831] placeholder-[#31363F]/40 focus:outline-none focus:ring-2 focus:ring-[#76ABAE] focus:border-transparent transition-all"
            placeholder="Minimum 6 karakter"
          />
        </div>

        <!-- Jelszó megerősítés -->
        <div>
          <label
            for="passwordAgain"
            class="block text-sm font-semibold text-[#222831] mb-2"
          >
            Jelszó megerősítése
          </label>
          <input
            type="password"
            id="passwordAgain"
            name="passwordAgain"
            class="w-full px-4 py-3 bg-white border-2 border-[#76ABAE]/30 rounded-xl text-[#222831] placeholder-[#31363F]/40 focus:outline-none focus:ring-2 focus:ring-[#76ABAE] focus:border-transparent transition-all"
            placeholder="Írd be újra a jelszót"
          />
        </div>

        <!-- Feltételek elfogadása -->
        <div class="flex items-start gap-3">
          <input
            type="checkbox"
            id="terms"
            name="terms"
            class="mt-1 h-5 w-5 rounded border-2 border-[#76ABAE]/30 text-[#76ABAE] focus:ring-2 focus:ring-[#76ABAE] cursor-pointer"
          />
          <label for="terms" class="text-sm text-[#31363F]">
            Elfogadom az
            <a
              href="#"
              class="text-[#76ABAE] hover:text-[#76ABAE]/80 font-medium underline"
              >Általános Szerződési Feltételeket</a
            >
            és az
            <a
              href="#"
              class="text-[#76ABAE] hover:text-[#76ABAE]/80 font-medium underline"
              >Adatvédelmi Szabályzatot</a
            >
          </label>
        </div>

        <!-- Hibaüzenet -->
        <% if (typeof error !== 'undefined' && error) { %>
        <div
          class="bg-red-50 border-2 border-red-300 text-red-700 px-4 py-3 rounded-xl text-sm"
        >
          <%= error %>
        </div>
        <% } %>

        <!-- Regisztráció gomb -->
        <button
          type="submit"
          class="w-full bg-[#76ABAE] hover:bg-[#76ABAE]/90 text-white font-bold py-4 rounded-xl transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-[#76ABAE]/50 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
        >
          Regisztráció
        </button>
      </form>

      <!-- Bejelentkezés link -->
      <div class="mt-6 text-center">
        <p class="text-[#31363F]/70 text-sm sm:text-base">
          Már van fiókod?
          <a
            href="/users/login"
            class="text-[#76ABAE] hover:text-[#76ABAE]/80 font-semibold ml-1"
          >
            Jelentkezz be itt
          </a>
        </p>
      </div>
    </section>

    <!-- Motivational Image -->
    <div class="hidden lg:block w-full scale-150">
      <img
        src="../../src/images/regisztracioOsztonzo.png"
        class="w-full h-auto drop-shadow-2xl"
        alt="Motivációs kép"
      />
    </div>
  </div>
</section>
