<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>StepSetGo - Lepj egy egeszsegesebb elet fele!</title>
  <link rel="stylesheet" href="../../src/css/landing.css" />
  <link rel="stylesheet" href="../../src/css/output.css" />
  <style>
    .mobile-menu {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.5s cubic-bezier(0.4, 0, 0.2, 1),
        opacity 0.3s ease, padding 0.3s ease;
      opacity: 0;
      padding-top: 0;
    }
    .mobile-menu.open {
      max-height: 600px;
      opacity: 1;
      padding-top: 1rem;
    }
    .hamburger-line {
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      transform-origin: center;
    }
    .hamburger.active .hamburger-line:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }
    .hamburger.active .hamburger-line:nth-child(2) {
      opacity: 0;
      transform: scaleX(0);
    }
    .hamburger.active .hamburger-line:nth-child(3) {
      transform: rotate(-45deg) translate(5px, -5px);
    }
    .nav-link-desktop {
      position: relative;
    }
    .nav-link-desktop::after {
      content: "";
      position: absolute;
      bottom: 4px;
      left: 50%;
      width: 0;
      height: 2px;
      background: linear-gradient(90deg, #76abae, #9fd3d6);
      transition: all 0.3s ease;
      transform: translateX(-50%);
      border-radius: 2px;
    }
    .nav-link-desktop:hover::after {
      width: 60%;
    }
    .logo-glow {
      filter: drop-shadow(0 0 10px rgba(118, 171, 174, 0.6));
    }
    .mobile-link {
      transform: translateX(-10px);
      opacity: 0;
      transition: all 0.3s ease;
    }
    .mobile-menu.open .mobile-link {
      transform: translateX(0);
      opacity: 1;
    }
    .mobile-menu.open .mobile-link:nth-child(1) {
      transition-delay: 0.05s;
    }
    .mobile-menu.open .mobile-link:nth-child(2) {
      transition-delay: 0.1s;
    }
    .mobile-menu.open .mobile-link:nth-child(3) {
      transition-delay: 0.15s;
    }
    .mobile-menu.open .mobile-link:nth-child(4) {
      transition-delay: 0.2s;
    }
    .mobile-menu.open .mobile-link:nth-child(5) {
      transition-delay: 0.25s;
    }
    .mobile-cta {
      transform: translateY(10px);
      opacity: 0;
      transition: all 0.3s ease 0.3s;
    }
    .mobile-menu.open .mobile-cta {
      transform: translateY(0);
      opacity: 1;
    }
  </style>
</head>

<nav
  class="w-full fixed top-0 left-0 right-0 z-50 px-3 py-2 sm:px-4 sm:py-3 lg:px-6"
  id="navbar"
>
  <div class="max-w-7xl mx-auto">
    <div
      class="backdrop-blur-2xl bg-gradient-to-r from-white/10 via-white/5 to-white/10 rounded-2xl border border-white/20 shadow-[0_8px_32px_rgba(0,0,0,0.3)] px-3 py-2.5 sm:px-4 sm:py-3 lg:px-6 lg:py-4"
    >
      <div class="flex items-center justify-between gap-4">
        <a href="/" class="flex items-center gap-2 sm:gap-3 group shrink-0">
          <div
            class="p-1.5 sm:p-2 rounded-xl bg-gradient-to-br from-[#76ABAE]/20 to-[#76ABAE]/5 border border-[#76ABAE]/30 group-hover:border-[#76ABAE]/50 transition-all duration-300"
          >
            <svg
              class="w-7 h-7 sm:w-8 sm:h-8 lg:w-9 lg:h-9 text-[#76ABAE] logo-glow"
              viewBox="0 0 24 24"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M4 18C4 18 4.5 14 7 12C9.5 10 10 6 10 6"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
              <path
                d="M10 6C10 6 11 8 13 8C15 8 16 6 16 6"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
              <ellipse cx="7" cy="4" rx="2" ry="1.5" fill="currentColor" />
              <path
                d="M14 18C14 18 14.5 14 17 12C19.5 10 20 6 20 6"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
              <ellipse cx="17" cy="4" rx="2" ry="1.5" fill="currentColor" />
              <path
                d="M2 22L6 18"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
              />
              <path
                d="M12 22L16 18"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
              />
            </svg>
          </div>
          <div class="hidden sm:flex flex-col">
            <span
              class="text-[#EEEEEE] font-bold text-base sm:text-lg lg:text-xl tracking-tight"
              >StepSetGo</span
            >
            <span
              class="text-[#EEEEEE]/70 text-[10px] sm:text-xs font-medium -mt-0.5"
              >Lépésszámláló</span
            >
          </div>
        </a>

        <div
          class="hidden lg:flex items-center justify-center flex-1 gap-1 xl:gap-2"
        >
          <% if (typeof navbarItemsLeft !== 'undefined' &&
          navbarItemsLeft.length > 0) { %> <%
          navbarItemsLeft.forEach(function(item) { %>
          <a
            href="<%= item.link %>"
            class="flex items-center justify-center px-4 xl:px-5 py-2 rounded-xl bg-white/5 hover:bg-white/15 transition-all duration-300"
          >
            <span class="text-[#EEEEEE] font-medium text-sm"
              ><%= item.name %></span
            >
          </a>
          <% }); %> <% } %>
        </div>

        <div class="hidden lg:flex items-center gap-2 shrink-0">
          <% if (typeof navbarItemsRight !== 'undefined' &&
          navbarItemsRight.length > 0) { %> <%
          navbarItemsRight.forEach(function(item) { %>
          <% if (item.type === 'cart') { %>
          <a
            href="<%= item.link %>"
            class="relative flex items-center justify-center w-11 h-11 rounded-xl backdrop-blur-xl bg-white/10 border border-white/20 hover:bg-white/20 hover:border-white/30 transition-all duration-300 shadow-lg shadow-black/10 group"
          >
            <svg
              class="w-5 h-5 text-[#EEEEEE] group-hover:text-white transition-colors duration-300"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"
              ></path>
            </svg>
            <span
              class="absolute -top-1.5 -right-1.5 flex items-center justify-center w-5 h-5 text-[10px] font-bold text-white bg-[#76ABAE] rounded-full border-2 border-[#222831] shadow-md"
              id="cartCounter"
              >0</span
            >
          </a>
          <% } else { %>
          <a
            href="<%= item.link %>"
            class="flex items-center justify-center px-5 py-2.5 rounded-xl bg-gradient-to-r from-[#76ABAE]/25 to-[#76ABAE]/15 border border-[#76ABAE]/40 transition-all duration-300 shadow-lg shadow-[#76ABAE]/10 hover:shadow-[#76ABAE]/20 group"
          >
            <span
              class="text-[#EEEEEE] font-semibold text-sm group-hover:text-white transition-colors duration-300"
              ><%= item.name %></span
            >
          </a>
          <% } %>
          <% }); %> <% } %>
        </div>

        <button
          class="hamburger lg:hidden flex flex-col items-center justify-center w-11 h-11 rounded-xl bg-white/10 hover:bg-white/20 border border-white/20 transition-all duration-300 gap-1.5 shrink-0"
          onclick="toggleMobileMenu()"
          aria-label="Menu"
        >
          <span
            class="hamburger-line w-5 h-0.5 bg-[#EEEEEE] rounded-full block"
          ></span>
          <span
            class="hamburger-line w-5 h-0.5 bg-[#EEEEEE] rounded-full block"
          ></span>
          <span
            class="hamburger-line w-5 h-0.5 bg-[#EEEEEE] rounded-full block"
          ></span>
        </button>
      </div>

      <div class="mobile-menu lg:hidden" id="mobileMenu">
        <div class="mt-3 pt-4 border-t border-white/10">
          <div class="grid gap-2">
            <a
              href="/"
              class="mobile-link group flex items-center gap-4 p-3 rounded-2xl bg-gradient-to-r from-black/50 to-black/40 hover:from-white/15 hover:to-white/5 border border-transparent transition-all duration-300"
            >
              <div
                class="w-10 h-10 rounded-xl bg-gradient-to-br from-[#76ABAE]/30 to-[#76ABAE]/10 flex items-center justify-center transition-transform duration-300"
              >
                <svg
                  class="w-5 h-5 text-[#76ABAE]"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                  />
                </svg>
              </div>
              <div class="flex flex-col">
                <span
                  class="text-[#EEEEEE] font-semibold text-base group-hover:text-white transition-colors"
                  >Fooldal</span
                >
                <span class="text-white/40 text-xs">Vissza a kezdolapra</span>
              </div>
              <svg
                class="w-5 h-5 text-white/30 ml-auto group-hover:text-[#76ABAE] group-hover:translate-x-1 transition-all duration-300"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"
                />
              </svg>
            </a>

            <% if (typeof navbarItemsLeft !== 'undefined' &&
            navbarItemsLeft.length > 0) { %> <%
            navbarItemsLeft.forEach(function(item, index) { %>
            <a
              href="<%= item.link %>"
              class="mobile-link group flex items-center gap-4 p-3 rounded-2xl bg-gradient-to-r from-black/50 to-black/40 hover:from-white/15 hover:to-white/5 border border-transparent hover:border-white/10 transition-all duration-300"
            >
              <div
                class="w-10 h-10 rounded-xl bg-gradient-to-br from-[#76ABAE]/30 to-[#76ABAE]/10 flex items-center justify-center transition-transform duration-300"
              >
                <svg
                  class="w-5 h-5 text-[#76ABAE]"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 10V3L4 14h7v7l9-11h-7z"
                  />
                </svg>
              </div>
              <div class="flex flex-col">
                <span
                  class="text-[#EEEEEE] font-semibold text-base group-hover:text-white transition-colors"
                  ><%= item.name %></span
                >
                <span class="text-white/40 text-xs">Fedezd fel</span>
              </div>
              <svg
                class="w-5 h-5 text-white/30 ml-auto group-hover:text-[#76ABAE] group-hover:translate-x-1 transition-all duration-300"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"
                />
              </svg>
            </a>
            <% }); %> <% } %>
          </div>

          <% if (typeof navbarItemsRight !== 'undefined' &&
          navbarItemsRight.length > 0) { %>
          <div class="mobile-cta grid gap-2 mt-4 pt-4 border-t border-white/10">
            <% navbarItemsRight.forEach(function(item) { %>
            <% if (item.type === 'cart') { %>
            <a
              href="<%= item.link %>"
              class="group flex items-center justify-center gap-3 p-4 rounded-2xl backdrop-blur-xl bg-white/10 border border-white/20 hover:bg-white/20 transition-all duration-300 shadow-lg"
            >
              <div class="relative">
                <svg
                  class="w-6 h-6 text-[#EEEEEE] group-hover:text-white transition-colors duration-300"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"
                  ></path>
                </svg>
                <span
                  class="absolute -top-2 -right-2 flex items-center justify-center w-5 h-5 text-[10px] font-bold text-white bg-[#76ABAE] rounded-full border-2 border-[#222831]"
                  id="cartCounterMobile"
                  >0</span
                >
              </div>
              <span class="text-[#EEEEEE] font-bold text-base group-hover:text-white"
                ><%= item.name %></span
              >
            </a>
            <% } else { %>
            <a
              href="<%= item.link %>"
              class="group flex items-center justify-center gap-3 p-4 rounded-2xl bg-gradient-to-r from-[#76ABAE]/90 via-[#76ABAE]/60 to-[#76ABAE]/30 border border-[#76ABAE]/50 transition-all duration-300 shadow-lg shadow-[#76ABAE]/20 hover:shadow-[#76ABAE]/30"
            >
              <svg
                class="w-5 h-5 text-[white] group-hover:scale-110 transition-transform duration-300"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"
                />
              </svg>
              <span class="text-white font-bold text-base"
                ><%= item.name %></span
              >
            </a>
            <% } %>
            <% }); %>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</nav>

<div class="h-16 sm:h-20 lg:h-24"></div>

<script>
  function toggleMobileMenu() {
    var menu = document.getElementById("mobileMenu");
    var hamburger = document.querySelector(".hamburger");
    menu.classList.toggle("open");
    hamburger.classList.toggle("active");
  }

  document.addEventListener("click", function (event) {
    var menu = document.getElementById("mobileMenu");
    var hamburger = document.querySelector(".hamburger");
    var navbar = document.getElementById("navbar");

    if (!navbar.contains(event.target) && menu.classList.contains("open")) {
      menu.classList.remove("open");
      hamburger.classList.remove("active");
    }
  });

  window.addEventListener("scroll", function () {
    var navElement = document.getElementById("navbar");
    var navInner = navElement.querySelector(".backdrop-blur-2xl");
    var currentScroll = window.pageYOffset;

    if (currentScroll > 50) {
      navInner.style.boxShadow = "0 8px 40px rgba(0,0,0,0.4)";
      navInner.style.borderColor = "rgba(255,255,255,0.25)";
    } else {
      navInner.style.boxShadow = "0 8px 32px rgba(0,0,0,0.3)";
      navInner.style.borderColor = "rgba(255,255,255,0.2)";
    }
  });
</script>
