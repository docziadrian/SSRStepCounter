<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>StepSetGo - Lépj egy egészségesebb élet felé!</title>
  <link rel="stylesheet" href="../../src/css/landing.css" />
  <link rel="stylesheet" href="../../src/css/output.css" />
</head>

<div
  class="w-full max-w-screen-2xl mx-auto top-4 sticky flex items-center justify-center px-4 md:px-6 z-50"
  id="navbar"
>
  <div
    class="backdrop-blur-xl bg-white/10 rounded-3xl border border-white/20 shadow-2xl p-4 md:p-6 w-full max-w-7xl"
  >
    <div class="flex flex-col md:flex-row w-full justify-between gap-4">
      <!-- Left Section -->
      <div
        class="flex flex-wrap justify-center md:justify-start items-center gap-3"
      >
        <!-- Logo/Brand -->
        <div
          class="flex items-center justify-center px-4 py-2 rounded-xl bg-white/10"
        >
          <span
            class="text-[#EEEEEE] font-bold text-lg md:text-xl tracking-wide w-full max-w-16 overflow-hidden h-12 items-center self-center align-bottom"
            ><img class="w-64 scale-200" src="../../src/images/logo.png" alt=""
          /></span>
        </div>

        <!-- Home Link -->
        <a
          href="/"
          class="flex items-center justify-center px-4 py-2 rounded-xl bg-white/10 hover:bg-white/20 transition-all duration-300 min-w-[100px] md:min-w-[120px] group"
        >
          <span class="text-[#EEEEEE] font-medium text-sm md:text-base"
            >Főoldal</span
          >
        </a>

        <!-- Dynamic Left Items -->
        <% if (typeof navbarItemsLeft !== 'undefined') { %> <%
        navbarItemsLeft.forEach(item => { %>
        <a
          href="<%= item.link %>"
          class="flex items-center justify-center px-4 py-2 rounded-xl bg-white/10 hover:bg-white/20 transition-all duration-300 min-w-[100px] md:min-w-[120px] group"
        >
          <span class="text-[#EEEEEE] font-medium text-sm md:text-base"
            ><%= item.name %></span
          >
        </a>
        <% }) %> <% } %>
      </div>

      <!-- Right Section -->
      <div
        class="flex flex-wrap justify-center md:justify-end items-center gap-3"
      >
        <% if (typeof navbarItemsRight !== 'undefined') { %> <%
        navbarItemsRight.forEach(item => { %>
        <a
          href="<%= item.link %>"
          class="flex items-center justify-center px-4 py-2 rounded-xl bg-white/15 hover:bg-[#76ABAE]/30 border border-white/20 hover:border-[#76ABAE]/40 transition-all duration-300 min-w-[100px] md:min-w-[120px] group"
        >
          <span
            class="text-[#EEEEEE] font-medium text-sm md:text-base group-hover:text-[#76ABAE]"
            ><%= item.name %></span
          >
        </a>
        <% }) %> <% } %>
      </div>
    </div>
  </div>
</div>
