<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>StepSetGo - Kosár</title>
  <link rel="stylesheet" href="../../src/css/landing.css" />
  <link rel="stylesheet" href="../../src/css/output.css" />
  <style>
    .glass-card {
      background: rgba(59, 85, 122, 0.212);
      backdrop-filter: blur(16px);
      -webkit-backdrop-filter: blur(16px);
      border: 1px solid rgba(118, 171, 174, 0.2);
    }
    .glass-card-light {
      background: rgba(255, 255, 255, 0.08);
      backdrop-filter: blur(16px);
      -webkit-backdrop-filter: blur(16px);
      border: 1px solid rgba(255, 255, 255, 0.15);
    }
    .quantity-input {
      -moz-appearance: textfield;
    }
    .quantity-input::-webkit-outer-spin-button,
    .quantity-input::-webkit-inner-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }
  </style>
</head>

<%- include('../navbar/navbar') %>

<section class="fixed inset-0 w-full h-full -z-10 bg-[#31363F]">
  <div class="absolute inset-0">
    <img
      src="../src/images/hatter.png"
      alt="Background"
      class="w-full h-full object-cover hidden xl:block"
    />
    <img
      src="../src/images/hattermobile.png"
      alt="Background"
      class="w-full h-full object-cover xl:hidden"
    />
    <div class="absolute inset-0 hero-gradient bg-pattern"></div>
  </div>
</section>

<main class="relative min-h-screen pt-32 pb-32 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <div class="mb-8">
      <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-3">
        Kosár
      </h1>
      <p class="text-[#EEEEEE]/70 text-sm sm:text-base">
        Tekintsd át a kiválasztott termékeket
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 lg:gap-8">
      <div class="lg:col-span-2 space-y-4">
        <div id="cartItems" class="space-y-4">
          <!-- Cart items will be loaded here by JavaScript -->
        </div>

        <div
          id="emptyCart"
          class="hidden glass-card rounded-2xl p-8 text-center"
        >
          <svg
            class="w-20 h-20 text-[#76ABAE]/50 mx-auto mb-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"
            ></path>
          </svg>
          <h3 class="text-xl font-bold text-white mb-2">A kosár üres</h3>
          <p class="text-[#EEEEEE]/70 mb-6">
            Még nem adtál hozzá egyetlen terméket sem a kosaradhoz
          </p>
          <a
            href="/products/view"
            class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-[#76ABAE] hover:bg-[#76ABAE]/90 text-white font-semibold transition-all"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 19l-7-7 7-7"
              ></path>
            </svg>
            Tovább vásárolok
          </a>
        </div>
      </div>

      <div class="lg:col-span-1">
        <div class="glass-card rounded-2xl p-6 sticky top-28">
          <h2 class="text-xl font-bold text-white mb-6">Összesítés</h2>

          <div class="space-y-4 mb-6">
            <div class="flex justify-between items-center text-[#EEEEEE]/70">
              <span>Részösszeg</span>
              <span id="subtotal" class="font-semibold text-white">0 Ft</span>
            </div>
            <div class="flex justify-between items-center text-[#EEEEEE]/70">
              <span>Szállítási költség</span>
              <span id="shipping" class="font-semibold text-white">0 Ft</span>
            </div>
            <div class="border-t border-[#76ABAE]/20 pt-4">
              <div class="flex justify-between items-center">
                <span class="text-lg font-bold text-white">Összesen</span>
                <span id="total" class="text-2xl font-bold text-[#76ABAE]"
                  >0 Ft</span
                >
              </div>
            </div>
          </div>

          <button
            id="checkoutBtn"
            class="w-full py-4 rounded-xl bg-[#76ABAE] hover:bg-[#76ABAE]/90 text-white text-lg font-bold transition-all flex items-center justify-center gap-3 shadow-lg hover:shadow-xl disabled:opacity-50 disabled:cursor-not-allowed"
            disabled
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"
              ></path>
            </svg>
            Fizetés
          </button>

          <a
            href="/products/view"
            class="block w-full mt-4 py-3 rounded-xl border border-[#76ABAE]/30 text-[#76ABAE] text-center font-semibold hover:bg-[#76ABAE]/10 transition-all"
          >
            Tovább vásárolok
          </a>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('../footer/footer') %>

<script>
  let cart = [];
  const SHIPPING_COST = 1990;
  const FREE_SHIPPING_THRESHOLD = 15000;

  function loadCart() {
    const savedCart = localStorage.getItem("cart");
    cart = savedCart ? JSON.parse(savedCart) : [];
    renderCart();
    updateCartCounter();
  }

  function saveCart() {
    localStorage.setItem("cart", JSON.stringify(cart));
    updateCartCounter();
  }

  function renderCart() {
    const cartItemsContainer = document.getElementById("cartItems");
    const emptyCart = document.getElementById("emptyCart");
    const checkoutBtn = document.getElementById("checkoutBtn");

    if (cart.length === 0) {
      cartItemsContainer.innerHTML = "";
      emptyCart.classList.remove("hidden");
      checkoutBtn.disabled = true;
      updateSummary();
      return;
    }

    emptyCart.classList.add("hidden");
    checkoutBtn.disabled = false;

    cartItemsContainer.innerHTML = cart
      .map(
        (item, index) => `
        <div class="glass-card-light rounded-xl p-4 sm:p-6">
          <div class="flex gap-4">
            <div class="flex-shrink-0 w-24 h-24 sm:w-32 sm:h-32 rounded-lg overflow-hidden bg-black/20">
              <img
                src="${
                  item.image || "https://via.placeholder.com/150?text=Kép"
                }"
                alt="${item.title}"
                class="w-full h-full object-cover"
                onerror="this.src='https://via.placeholder.com/150?text=Kép'"
              />
            </div>
  
            <div class="flex-1 min-w-0">
              <div class="flex justify-between items-start gap-2 mb-2">
                <h3 class="text-white font-bold text-base sm:text-lg line-clamp-2">
                  ${item.title}
                </h3>
                <button
                  onclick="removeFromCart(${index})"
                  class="flex-shrink-0 p-2 rounded-lg hover:bg-red-500/20 text-red-400 hover:text-red-300 transition-all"
                  title="Eltávolítás"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                </button>
              </div>
  
              <p class="text-[#EEEEEE]/60 text-sm mb-3 line-clamp-1">
                ${item.category || "Kategória nélkül"}
              </p>
  
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
                <div class="flex items-center gap-3">
                  <button
                    onclick="updateQuantity(${index}, ${item.quantity - 1})"
                    class="w-8 h-8 rounded-lg bg-[#76ABAE]/20 hover:bg-[#76ABAE]/30 text-white flex items-center justify-center transition-all"
                    ${item.quantity <= 1 ? "disabled" : ""}
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
                    </svg>
                  </button>
                  <input
                    type="number"
                    value="${item.quantity}"
                    min="1"
                    max="99"
                    onchange="updateQuantity(${index}, parseInt(this.value))"
                    class="quantity-input w-16 px-2 py-1 text-center bg-[#76ABAE]/20 text-white rounded-lg border border-[#76ABAE]/30 focus:outline-none focus:border-[#76ABAE]"
                  />
                  <button
                    onclick="updateQuantity(${index}, ${item.quantity + 1})"
                    class="w-8 h-8 rounded-lg bg-[#76ABAE]/20 hover:bg-[#76ABAE]/30 text-white flex items-center justify-center transition-all"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                  </button>
                </div>
  
                <div class="text-right">
                  <div class="text-[#76ABAE] font-bold text-lg sm:text-xl">
                    ${(item.price * item.quantity).toLocaleString("hu-HU")} Ft
                  </div>
                  ${
                    item.quantity > 1
                      ? `<div class="text-[#EEEEEE]/50 text-xs">${item.price.toLocaleString(
                          "hu-HU"
                        )} Ft / db</div>`
                      : ""
                  }
                </div>
              </div>
            </div>
          </div>
        </div>
      `
      )
      .join("");

    updateSummary();
  }

  function updateQuantity(index, newQuantity) {
    if (newQuantity < 1 || newQuantity > 99) return;
    cart[index].quantity = newQuantity;
    saveCart();
    renderCart();
  }

  function removeFromCart(index) {
    if (confirm("Biztosan eltávolítod ezt a terméket a kosárból?")) {
      cart.splice(index, 1);
      saveCart();
      renderCart();
    }
  }

  function updateSummary() {
    const subtotal = cart.reduce(
      (sum, item) => sum + item.price * item.quantity,
      0
    );
    const shipping =
      subtotal >= FREE_SHIPPING_THRESHOLD
        ? 0
        : subtotal > 0
        ? SHIPPING_COST
        : 0;
    const total = subtotal + shipping;

    document.getElementById("subtotal").textContent =
      subtotal.toLocaleString("hu-HU") + " Ft";
    document.getElementById("shipping").textContent =
      shipping === 0 && subtotal > 0
        ? "Ingyenes"
        : shipping.toLocaleString("hu-HU") + " Ft";
    document.getElementById("total").textContent =
      total.toLocaleString("hu-HU") + " Ft";
  }

  function updateCartCounter() {
    const totalItems = cart.reduce((sum, item) => sum + item.quantity, 0);
    const cartCounter = document.getElementById("cartCounter");
    const cartCounterMobile = document.getElementById("cartCounterMobile");

    if (cartCounter) {
      cartCounter.textContent = totalItems;
    }
    if (cartCounterMobile) {
      cartCounterMobile.textContent = totalItems;
    }
  }

  document
    .getElementById("checkoutBtn")
    ?.addEventListener("click", function () {
      if (cart.length === 0) return;

      alert("A fizetési funkció hamarosan elérhető lesz!");
    });

  document.addEventListener("DOMContentLoaded", loadCart);
</script>
