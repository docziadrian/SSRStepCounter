<!DOCTYPE html>
<html lang="hu">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>StepSetGo - <%= plan.plan_name %></title>
  <link rel="stylesheet" href="../../src/css/landing.css" />
  <link rel="stylesheet" href="../../src/css/output.css" />
  <style>
    .glass-card {
      background: rgba(59, 85, 122, 0.212);
      backdrop-filter: blur(16px);
      -webkit-backdrop-filter: blur(16px);
      border: 1px solid rgba(118, 171, 174, 0.2);
    }
    .glass-card-light {
      background: rgba(255, 255, 255, 0.08);
      backdrop-filter: blur(16px);
      -webkit-backdrop-filter: blur(16px);
      border: 1px solid rgba(255, 255, 255, 0.15);
    }
    .week-tab {
      transition: all 0.3s ease;
      cursor: pointer;
    }
    .week-tab.active {
      background: rgba(118, 171, 174, 0.3);
      border-color: #76ABAE;
    }
    .day-card {
      transition: all 0.3s ease;
    }
    .day-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }
    .day-card.rest-day {
      background: rgba(139, 92, 246, 0.15);
      border-color: rgba(139, 92, 246, 0.3);
    }
    .block-warmup { border-left-color: #FFA726; }
    .block-main { border-left-color: #42A5F5; }
    .block-cooldown { border-left-color: #26A69A; }
    .block-hiit { border-left-color: #FF7043; }
    .block-core { border-left-color: #66BB6A; }
    .exercise-row {
      transition: all 0.2s ease;
    }
    .exercise-row:hover {
      background: rgba(118, 171, 174, 0.1);
    }
    .progress-ring {
      transform: rotate(-90deg);
    }
    .week-content {
      display: none;
      animation: fadeIn 0.4s ease;
    }
    .week-content.active {
      display: block;
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .day-expanded {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.4s ease;
    }
    .day-expanded.open {
      max-height: 2000px;
    }
    .muscle-tag {
      background: rgba(118, 171, 174, 0.2);
      color: #76ABAE;
      padding: 2px 8px;
      border-radius: 9999px;
      font-size: 10px;
      font-weight: 600;
    }
    .tip-card {
      background: linear-gradient(135deg, rgba(118, 171, 174, 0.15), rgba(118, 171, 174, 0.05));
      border-left: 3px solid #76ABAE;
    }
  </style>
</head>

<body class="bg-[#222831] min-h-screen">
<%- include('../navbar/navbar') %>

<!-- Háttér -->
<section class="fixed inset-0 w-full h-full -z-10 bg-[#31363F]">
  <div class="absolute inset-0">
    <img src="../src/images/hatter.png" alt="Background" class="w-full h-full object-cover hidden xl:block" />
    <img src="../src/images/hattermobile.png" alt="Background" class="w-full h-full object-cover xl:hidden" />
    <div class="absolute inset-0 hero-gradient bg-pattern"></div>
  </div>
</section>

<main class="relative min-h-screen pt-8 pb-32 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    
    <!-- Vissza gomb és fejléc -->
    <div class="mb-6">
      <a href="/plans/view" class="inline-flex items-center gap-2 text-[#76ABAE] hover:text-[#76ABAE]/80 text-sm font-medium transition-colors mb-4">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Vissza az edzéstervekhez
      </a>
      
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
        <div>
          <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-white mb-2">
            <%= plan.plan_name %>
          </h1>
          <p class="text-[#EEEEEE]/70 text-sm max-w-2xl">
            <%= plan.plan_description || planContent.planDescription || 'Személyre szabott edzésterv a céljaid eléréséhez.' %>
          </p>
        </div>
        <div class="flex items-center gap-3">
          <a href="/plans/view" class="px-4 py-2 rounded-lg glass-card-light text-white text-sm font-medium hover:bg-white/10 transition-all flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Új terv
          </a>
          <button onclick="printPlan()" class="px-4 py-2 rounded-lg bg-[#76ABAE] text-white text-sm font-medium hover:bg-[#76ABAE]/90 transition-all flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
            </svg>
            Nyomtatás
          </button>
        </div>
      </div>
    </div>

    <!-- Statisztika kártyák -->
    <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 mb-8">
      <div class="glass-card rounded-xl p-4">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-lg bg-[#76ABAE]/20 flex items-center justify-center">
            <svg class="w-5 h-5 text-[#76ABAE]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <div>
            <p class="text-[#EEEEEE]/50 text-xs">Időtartam</p>
            <p class="text-white font-bold text-lg"><%= plan.duration_weeks %> hét</p>
          </div>
        </div>
      </div>
      <div class="glass-card rounded-xl p-4">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-lg bg-[#76ABAE]/20 flex items-center justify-center">
            <svg class="w-5 h-5 text-[#76ABAE]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <div>
            <p class="text-[#EEEEEE]/50 text-xs">Edzések/hét</p>
            <p class="text-white font-bold text-lg"><%= plan.days_per_week %> nap</p>
          </div>
        </div>
      </div>
      <div class="glass-card rounded-xl p-4">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-lg bg-[#76ABAE]/20 flex items-center justify-center">
            <svg class="w-5 h-5 text-[#76ABAE]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <p class="text-[#EEEEEE]/50 text-xs">Edzés hossza</p>
            <p class="text-white font-bold text-lg"><%= plan.session_duration_minutes %> perc</p>
          </div>
        </div>
      </div>
      <div class="glass-card rounded-xl p-4">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-lg bg-[#76ABAE]/20 flex items-center justify-center">
            <svg class="w-5 h-5 text-[#76ABAE]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <div>
            <p class="text-[#EEEEEE]/50 text-xs">Összes edzés</p>
            <p class="text-white font-bold text-lg"><%= plan.duration_weeks * plan.days_per_week %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Részletek táblázat -->
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-6 mb-8">
      <div class="lg:col-span-3">
        <div class="glass-card rounded-xl p-4 sm:p-6">
          <div class="flex flex-wrap items-center gap-3 mb-4">
            <span class="px-3 py-1 rounded-full text-sm font-semibold bg-[#76ABAE]/20 text-[#76ABAE] inline-flex items-center gap-1.5">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>
              <%= plan.goal_name || 'Általános fittség' %>
            </span>
            <span class="px-3 py-1 rounded-full text-sm font-semibold bg-purple-500/20 text-purple-400 inline-flex items-center gap-1.5">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" /></svg>
              <%= plan.level_name || 'Kezdő' %>
            </span>
            <span class="px-3 py-1 rounded-full text-sm font-semibold bg-orange-500/20 text-orange-400 inline-flex items-center gap-1.5">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
              <%= plan.location_name || 'Otthon' %>
            </span>
          </div>
          
          <% if (equipmentNames && equipmentNames.length > 0) { %>
          <div class="mb-4">
            <p class="text-[#EEEEEE]/50 text-xs mb-2">Használt eszközök:</p>
            <div class="flex flex-wrap gap-2">
              <% equipmentNames.forEach(eq => { %>
              <span class="px-2 py-1 rounded-md text-xs font-medium bg-white/5 text-[#EEEEEE]/70 border border-white/10">
                <%= eq %>
              </span>
              <% }); %>
            </div>
          </div>
          <% } %>

          <% if (planContent.difficultyProgression) { %>
          <div class="tip-card rounded-lg p-4">
            <p class="text-sm text-white font-semibold mb-1 flex items-center gap-2">
              <svg class="w-4 h-4 text-[#76ABAE]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" /></svg>
              Progresszió
            </p>
            <p class="text-[#EEEEEE]/70 text-sm"><%= planContent.difficultyProgression %></p>
          </div>
          <% } %>
        </div>
      </div>

      <div class="lg:col-span-1">
        <div class="glass-card rounded-xl p-4">
          <h3 class="text-white font-bold text-sm mb-3 flex items-center gap-2">
            <svg class="w-4 h-4 text-[#76ABAE]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Haladásod
          </h3>
          <div class="flex items-center justify-center mb-3">
            <div class="relative w-24 h-24">
              <svg class="progress-ring w-24 h-24">
                <circle cx="48" cy="48" r="40" stroke="#76ABAE20" stroke-width="8" fill="none" />
                <circle cx="48" cy="48" r="40" stroke="#76ABAE" stroke-width="8" fill="none" 
                  stroke-dasharray="251.2" stroke-dashoffset="<%= 251.2 - (251.2 * (progress.length / (plan.duration_weeks * plan.days_per_week))) %>" 
                  stroke-linecap="round" />
              </svg>
              <div class="absolute inset-0 flex items-center justify-center">
                <span class="text-white font-bold text-lg">
                  <%= progress.length %>/<%= plan.duration_weeks * plan.days_per_week %>
                </span>
              </div>
            </div>
          </div>
          <p class="text-center text-[#EEEEEE]/50 text-xs">Teljesített edzések</p>
        </div>
      </div>
    </div>

    <!-- Heti fülek és edzésterv -->
    <% if (planContent.weeks && planContent.weeks.length > 0) { %>
    <div class="glass-card rounded-xl overflow-hidden">
      <!-- Heti fülek -->
      <div class="flex overflow-x-auto p-2 gap-2 bg-black/20">
        <% planContent.weeks.forEach((week, index) => { %>
        <button 
          onclick="showWeek(<%= index %>)" 
          class="week-tab flex-shrink-0 px-4 py-2 rounded-lg text-sm font-medium text-white/70 hover:text-white hover:bg-white/10 border border-transparent <%= index === 0 ? 'active' : '' %>"
          id="weekTab<%= index %>"
        >
          <%= index + 1 %>. hét
        </button>
        <% }); %>
      </div>

      <!-- Heti tartalom -->
      <% planContent.weeks.forEach((week, weekIndex) => { %>
      <div class="week-content p-4 sm:p-6 <%= weekIndex === 0 ? 'active' : '' %>" id="weekContent<%= weekIndex %>">
        
        <% if (week.weekFocus || week.weekTips) { %>
        <div class="mb-6 p-4 rounded-xl bg-gradient-to-r from-[#76ABAE]/10 to-transparent border-l-4 border-[#76ABAE]">
          <% if (week.weekFocus) { %>
          <h3 class="text-white font-bold text-lg mb-1 flex items-center gap-2">
            <svg class="w-5 h-5 text-[#76ABAE]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>
            <%= week.weekFocus %>
          </h3>
          <% } %>
          <% if (week.weekTips) { %>
          <p class="text-[#EEEEEE]/70 text-sm"><%= week.weekTips %></p>
          <% } %>
        </div>
        <% } %>

        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4">
          <% if (week.days && week.days.length > 0) { %>
          <% week.days.forEach((day, dayIndex) => { %>
          <div class="day-card glass-card-light rounded-xl overflow-hidden <%= day.isRestDay ? 'rest-day' : '' %>">
            <!-- Nap fejléc -->
            <div 
              class="p-4 cursor-pointer"
              onclick="toggleDay('week<%= weekIndex %>day<%= dayIndex %>')"
            >
              <div class="flex items-center justify-between mb-2">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 rounded-lg bg-[#76ABAE]/20 flex items-center justify-center">
                    <% if (day.isRestDay) { %>
                    <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" /></svg>
                    <% } else { %>
                    <span class="text-white font-bold"><%= day.dayNumber %></span>
                    <% } %>
                  </div>
                  <div>
                    <h4 class="text-white font-bold"><%= day.dayName || day.dayNumber + '. nap' %></h4>
                    <p class="text-[#EEEEEE]/50 text-xs"><%= day.dayFocus || (day.isRestDay ? 'Pihenőnap' : 'Edzésnap') %></p>
                  </div>
                </div>
                <svg class="w-5 h-5 text-[#EEEEEE]/50 transition-transform" id="arrow-week<%= weekIndex %>day<%= dayIndex %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </div>
              
              <% if (!day.isRestDay) { %>
              <div class="flex items-center gap-4 text-xs text-[#EEEEEE]/50">
                <span class="flex items-center gap-1">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <%= day.totalDuration || plan.session_duration_minutes %> perc
                </span>
                <% if (day.estimatedCalories) { %>
                <span class="flex items-center gap-1">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" />
                  </svg>
                  ~<%= day.estimatedCalories %> kcal
                </span>
                <% } %>
                <% if (day.stepGoal) { %>
                <span class="flex items-center gap-1 text-[#76ABAE]">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                  </svg>
                  <%= day.stepGoal.toLocaleString('hu-HU') %> lépés
                </span>
                <% } %>
              </div>
              <% } %>
            </div>

            <!-- Nap részletei (összecsukható) -->
            <% if (!day.isRestDay && day.blocks && day.blocks.length > 0) { %>
            <div class="day-expanded" id="week<%= weekIndex %>day<%= dayIndex %>">
              <div class="border-t border-white/10 p-4 space-y-4">
                <% day.blocks.forEach(block => { %>
                <div class="rounded-lg p-3 bg-black/20 border-l-4 
                  <%= block.blockType === 'warmup' ? 'block-warmup' : '' %>
                  <%= block.blockType === 'main' ? 'block-main' : '' %>
                  <%= block.blockType === 'cooldown' ? 'block-cooldown' : '' %>
                  <%= block.blockType === 'hiit' ? 'block-hiit' : '' %>
                  <%= block.blockType === 'core' ? 'block-core' : '' %>
                ">
                  <div class="flex items-center justify-between mb-2">
                    <h5 class="text-white font-semibold text-sm flex items-center gap-2">
                      <% if (block.blockType === 'warmup') { %>
                      <svg class="w-4 h-4 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" /></svg>
                      <% } else if (block.blockType === 'main') { %>
                      <svg class="w-4 h-4 text-blue-400" fill="currentColor" viewBox="0 0 24 24"><path d="M20.57 14.86L22 13.43 20.57 12 17 15.57 8.43 7 12 3.43 10.57 2 9.14 3.43 7.71 2 5.57 4.14 4.14 2.71 2.71 4.14l1.43 1.43L2 7.71l1.43 1.43L2 10.57 3.43 12 7 8.43 15.57 17 12 20.57 13.43 22l1.43-1.43L16.29 22l2.14-2.14 1.43 1.43 1.43-1.43-1.43-1.43L22 16.29z" /></svg>
                      <% } else if (block.blockType === 'cooldown') { %>
                      <svg class="w-4 h-4 text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" /></svg>
                      <% } else if (block.blockType === 'hiit') { %>
                      <svg class="w-4 h-4 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
                      <% } else if (block.blockType === 'core') { %>
                      <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>
                      <% } else { %>
                      <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" /></svg>
                      <% } %>
                      <%= block.blockName %>
                    </h5>
                    <span class="text-[#EEEEEE]/50 text-xs"><%= block.duration || '10' %> perc</span>
                  </div>
                  
                  <% if (block.exercises && block.exercises.length > 0) { %>
                  <div class="space-y-2">
                    <% block.exercises.forEach(exercise => { %>
                    <div class="exercise-row rounded-md p-2 -mx-2">
                      <div class="flex items-start justify-between gap-2">
                        <div class="flex-1">
                          <p class="text-white text-sm font-medium"><%= exercise.name %></p>
                          <div class="flex flex-wrap items-center gap-2 mt-1">
                            <% if (exercise.sets) { %>
                            <span class="text-[#76ABAE] text-xs font-semibold"><%= exercise.sets %> × <%= exercise.reps || '10' %></span>
                            <% } %>
                            <% if (exercise.rest) { %>
                            <span class="text-[#EEEEEE]/40 text-xs inline-flex items-center gap-1">
                              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                              <%= exercise.rest %>
                            </span>
                            <% } %>
                            <% if (exercise.muscleGroups && exercise.muscleGroups.length > 0) { %>
                            <% exercise.muscleGroups.slice(0, 2).forEach(muscle => { %>
                            <span class="muscle-tag"><%= muscle %></span>
                            <% }); %>
                            <% } %>
                          </div>
                          <% if (exercise.notes) { %>
                          <p class="text-[#EEEEEE]/40 text-xs mt-1 italic"><%= exercise.notes %></p>
                          <% } %>
                        </div>
                      </div>
                    </div>
                    <% }); %>
                  </div>
                  <% } %>
                </div>
                <% }); %>
              </div>
            </div>
            <% } else if (day.isRestDay) { %>
            <div class="day-expanded" id="week<%= weekIndex %>day<%= dayIndex %>">
              <div class="border-t border-purple-500/20 p-4">
                <p class="text-[#EEEEEE]/70 text-sm text-center flex items-center justify-center gap-2">
                  <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" /></svg>
                  Ma pihenj és regenerálódj! Figyelj az alvásra és a megfelelő folyadékbevitelre.
                </p>
                <% if (day.stepGoal) { %>
                <p class="text-purple-400 text-sm text-center mt-2 font-medium flex items-center justify-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" /></svg>
                  Ajánlott lépéscél: <%= day.stepGoal.toLocaleString('hu-HU') %> lépés (könnyű séta)
                </p>
                <% } %>
              </div>
            </div>
            <% } %>
          </div>
          <% }); %>
          <% } %>
        </div>
      </div>
      <% }); %>
    </div>
    <% } %>

    <!-- Tanácsok szekció -->
    <% if (planContent.generalTips || planContent.nutritionTips || planContent.recoveryTips) { %>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
      <% if (planContent.generalTips && planContent.generalTips.length > 0) { %>
      <div class="glass-card rounded-xl p-5">
        <h3 class="text-white font-bold mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" /></svg>
          Általános tanácsok
        </h3>
        <ul class="space-y-2">
          <% planContent.generalTips.forEach(tip => { %>
          <li class="text-[#EEEEEE]/70 text-sm flex items-start gap-2">
            <svg class="w-4 h-4 text-[#76ABAE] flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <%= tip %>
          </li>
          <% }); %>
        </ul>
      </div>
      <% } %>

      <% if (planContent.nutritionTips && planContent.nutritionTips.length > 0) { %>
      <div class="glass-card rounded-xl p-5">
        <h3 class="text-white font-bold mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" /></svg>
          Táplálkozási tanácsok
        </h3>
        <ul class="space-y-2">
          <% planContent.nutritionTips.forEach(tip => { %>
          <li class="text-[#EEEEEE]/70 text-sm flex items-start gap-2">
            <svg class="w-4 h-4 text-green-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <%= tip %>
          </li>
          <% }); %>
        </ul>
      </div>
      <% } %>

      <% if (planContent.recoveryTips && planContent.recoveryTips.length > 0) { %>
      <div class="glass-card rounded-xl p-5">
        <h3 class="text-white font-bold mb-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" /></svg>
          Regenerációs tanácsok
        </h3>
        <ul class="space-y-2">
          <% planContent.recoveryTips.forEach(tip => { %>
          <li class="text-[#EEEEEE]/70 text-sm flex items-start gap-2">
            <svg class="w-4 h-4 text-purple-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <%= tip %>
          </li>
          <% }); %>
        </ul>
      </div>
      <% } %>
    </div>
    <% } %>

    <!-- Eszköz alternatívák -->
    <% if (planContent.equipmentAlternatives && Object.keys(planContent.equipmentAlternatives).length > 0) { %>
    <div class="glass-card rounded-xl p-5 mt-6">
      <h3 class="text-white font-bold mb-4 flex items-center gap-2">
        <svg class="w-5 h-5 text-[#76ABAE]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" /></svg>
        Eszköz alternatívák
      </h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-3">
        <% Object.entries(planContent.equipmentAlternatives).forEach(([equipment, alternative]) => { %>
        <div class="flex items-center gap-2 p-2 rounded-lg bg-white/5">
          <span class="text-[#EEEEEE]/70 text-sm"><%= equipment %></span>
          <svg class="w-4 h-4 text-[#76ABAE]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
          <span class="text-white text-sm font-medium"><%= alternative %></span>
        </div>
        <% }); %>
      </div>
    </div>
    <% } %>

  </div>
</main>

<%- include('../footer/footer') %>

<script>
  // Heti tartalom váltás
  function showWeek(index) {
    // Fülek
    document.querySelectorAll('.week-tab').forEach((tab, i) => {
      tab.classList.toggle('active', i === index);
    });
    // Tartalom
    document.querySelectorAll('.week-content').forEach((content, i) => {
      content.classList.toggle('active', i === index);
    });
  }

  // Napi részletek kinyitása/becsukása
  function toggleDay(dayId) {
    const content = document.getElementById(dayId);
    const arrow = document.getElementById('arrow-' + dayId);
    
    if (content) {
      content.classList.toggle('open');
      if (arrow) {
        arrow.style.transform = content.classList.contains('open') ? 'rotate(180deg)' : 'rotate(0deg)';
      }
    }
  }

  // Nyomtatás
  function printPlan() {
    window.print();
  }

  // Első nap automatikus kinyitása minden héten
  document.querySelectorAll('.week-content').forEach((week, weekIndex) => {
    const firstDay = week.querySelector('.day-expanded');
    if (firstDay) {
      const dayId = firstDay.id;
      toggleDay(dayId);
    }
  });
</script>
</body>
</html>

