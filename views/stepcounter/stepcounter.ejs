<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>StepSetGo - Lépésszámláló</title>
  <link rel="stylesheet" href="../../src/css/landing.css" />
  <link rel="stylesheet" href="../../src/css/output.css" />
</head>

<%- include('../navbar/navbar') %>

<section
  class="relative w-full min-h-screen bg-[#31363F] lg:min-h-[calc(71vh*1.3)] xl:min-h-[calc(81vh*1.3)] flex items-center justify-center overflow-hidden -top-32"
>
  <!-- BG image -->
  <div class="absolute inset-0 z-0">
    <img
      src="../src/images/hatter.png"
      alt="Background"
      class="w-full h-full xl:max-w-[70%] object-cover"
    />
    <div class="absolute inset-0 hero-gradient bg-pattern"></div>
  </div>

  <!-- Mobile BG image -->
  <div class="absolute inset-0 z-0 xl:hidden">
    <img
      src="../src/images/hattermobile.png"
      alt="Background"
      class="w-full h-full xl:max-w-[70%] object-cover"
    />
    <div class="absolute inset-0 hero-gradient bg-pattern"></div>
  </div>

  <div class="relative z-10 w-full max-w-7xl mx-auto top-40">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 lg:gap-6 mb-4">
      <div
        class="bg-[#222831]/60 backdrop-blur-md rounded-xl shadow-xl p-4 sm:p-6 border border-[#76ABAE]/20"
      >
        <h2 class="text-xl sm:text-2xl font-bold mb-1 text-[white]">
          Lépésszámláló
        </h2>
        <p class="text-xs text-[white] mb-4">
          Kövesd nyomon napi lépéseidet és érj el új célokat
        </p>

        <div class="mb-6">
          <div class="text-center mb-4">
            <div
              class="inline-flex items-center justify-center w-24 h-24 rounded-full bg-gradient-to-br from-[#76ABAE] to-[#76ABAE]/70 shadow-lg mb-3"
            >
              <span class="text-3xl font-bold text-white"
                ><%= dailySteps.toLocaleString('hu-HU') %></span
              >
            </div>
            <p class="text-xs font-medium text-[white]">Mai lépések</p>
          </div>

          <div class="grid grid-cols-3 gap-3 mb-4">
            <div
              class="text-center p-3 bg-[#76ABAE]/5 rounded-lg border border-[#76ABAE]/10"
            >
              <p class="text-xl font-bold text-[#76ABAE]">
                <%= weeklyAverage.toLocaleString('hu-HU') %>
              </p>
              <p class="text-xs text-[white] mt-1">Heti átlag</p>
            </div>
            <div
              class="text-center p-3 bg-[#76ABAE]/5 rounded-lg border border-[#76ABAE]/10"
            >
              <p class="text-xl font-bold text-[#76ABAE]">
                <%= monthlyTotal.toLocaleString('hu-HU') %>
              </p>
              <p class="text-xs text-[white] mt-1">Havi összeg</p>
            </div>
            <div
              class="text-center p-3 bg-[#76ABAE]/5 rounded-lg border border-[#76ABAE]/10"
            >
              <p class="text-xl font-bold text-[#76ABAE]">
                <%= dailyGoal.toLocaleString('hu-HU') %>
              </p>
              <p class="text-xs text-[white] mt-1">Napi cél</p>
            </div>
          </div>

          <div class="bg-[#76ABAE]/5 rounded-lg p-3 border border-[#76ABAE]/10">
            <div class="flex justify-between items-center mb-2">
              <span class="text-xs font-medium text-[white]">Napi haladás</span>
              <span class="text-xs font-semibold text-[#76ABAE]"
                ><%= dailyProgress %>%</span
              >
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div
                class="bg-gradient-to-r from-[#76ABAE] to-[#76ABAE]/70 h-2 rounded-full transition-all duration-500"
                style="width: <%= dailyProgress %>%"
              ></div>
            </div>
          </div>
        </div>

        <form class="space-y-3">
          <div>
            <label
              for="steps"
              class="block text-xs font-semibold text-[white] mb-1.5"
            >
              Lépések hozzáadása
            </label>
            <input
              type="number"
              id="steps"
              name="steps"
              min="0"
              required
              placeholder="Pl.: 5000"
              class="w-full px-3 py-2.5 text-sm bg-white border-2 border-[#76ABAE]/30 rounded-lg text-[#222831] placeholder-[#31363F]/40 focus:outline-none focus:ring-2 focus:ring-[#76ABAE] focus:border-transparent transition-all"
            />
          </div>

          <div>
            <label
              for="date"
              class="block text-xs font-semibold text-[white] mb-1.5"
            >
              Dátum
            </label>
            <input
              type="date"
              id="date"
              name="date"
              required
              class="w-full px-3 py-2.5 text-sm bg-white border-2 border-[#76ABAE]/30 rounded-lg text-[#222831] focus:outline-none focus:ring-2 focus:ring-[#76ABAE] focus:border-transparent transition-all"
            />
          </div>

          <% if (typeof error !== 'undefined' && error) { %>
          <div
            class="bg-red-50 border-2 border-red-300 text-red-700 px-3 py-2 rounded-lg text-xs"
          >
            <%= error %>
          </div>
          <% } %> <% if (typeof success !== 'undefined' && success) { %>
          <div
            class="bg-green-50 border-2 border-green-300 text-green-700 px-3 py-2 rounded-lg text-xs"
          >
            <%= success %>
          </div>
          <% } %>

          <button
            type="button"
            onclick="handleNewSteps('<%= useremail %>')"
            class="w-full bg-[#76ABAE] hover:bg-[#76ABAE]/90 text-white text-sm font-bold py-2.5 rounded-lg transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-[#76ABAE]/50 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
          >
            Lépések rögzítése
          </button>
        </form>
      </div>

      <div
        class="bg-[#222831]/60 h-82 backdrop-blur-md rounded-xl shadow-xl p-4 sm:p-6 border border-[#76ABAE]/20"
      >
        <h3 class="text-xl sm:text-2xl font-bold mb-1 text-[white]">
          Napi cél beállítása
        </h3>
        <p class="text-xs text-[white] mb-4">
          Állítsd be az elérendő napi lépésszámod
        </p>

        <form action="/stepcounter/goal" method="POST" class="space-y-3">
          <div>
            <label
              for="dailyGoal"
              class="block text-xs font-semibold text-[white] mb-1.5"
            >
              Napi lépéscél
            </label>
            <input
              type="number"
              id="dailyGoal"
              name="dailyGoal"
              min="1000"
              step="1000"
              placeholder="írj be új napi célt (lépésekben)"
              required
              class="w-full px-3 py-2.5 text-sm bg-white border-2 border-[#76ABAE]/30 rounded-lg text-[#222831] focus:outline-none focus:ring-2 focus:ring-[#76ABAE] focus:border-transparent transition-all"
            />
          </div>
          <button
            type="submit"
            class="w-full bg-[#76ABAE] hover:bg-[#76ABAE]/90 text-white text-sm font-bold py-2.5 rounded-lg transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-[#76ABAE]/50 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
          >
            Cél mentése
          </button>
        </form>
      </div>
    </div>

    <div class="hidden lg:flex justify-end">
      <div class="w-full lg:w-auto lg:max-w-lg -mt-80">
        <img
          src="../../src/images/lepesCounter2.png"
          class="w-full h-auto drop-shadow-2xl ]"
          alt="Motivációs kép"
        />
      </div>
    </div>
  </div>
</section>

<%- include('previousSteps') %> <%- include('../footer/footer') %>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const dateInput = document.querySelector("#date");
    if (dateInput) {
      const today = new Date();
      const year = today.getFullYear();
      const month = String(today.getMonth() + 1).padStart(2, "0");
      const day = String(today.getDate()).padStart(2, "0");
      const todayString = `${year}-${month}-${day}`;

      dateInput.value = todayString;
      dateInput.setAttribute("max", todayString);
    }
  });

  function handleDeleteSteps(userEmail, date) {
    if (
      !confirm(
        `Biztosan törölni szeretnéd a ${date} dátumhoz tartozó bejegyzést?`
      )
    ) {
      return;
    }

    fetch("/stepcounter/view/delete", {
      method: "POST",
      headers: {
        "Content-Type": "application/x-www-form-urlencoded",
      },
      body: new URLSearchParams({
        email: userEmail,
        date: date,
      }),
    })
      .then((response) => {
        if (response.redirected) {
          window.location.href = response.url;
        } else {
          return response.text();
        }
      })
      .then((data) => {
        if (data) {
          window.location.reload();
        }
      })
      .catch((error) => {
        console.error("Hiba:", error);
        alert("Hiba történt a törlés során. Kérlek próbáld újra!");
      });
  }

  function handleEditSteps(userEmail, date, currentSteps) {
    const newSteps = prompt(`Lépések szerkesztése (${date}):`, currentSteps);

    if (newSteps === null) return; // Mégsem

    if (!newSteps || newSteps === "" || parseInt(newSteps) <= 0) {
      alert("Kérlek adj meg egy érvényes lépésszámot!");
      return;
    }

    fetch("/stepcounter/view/edit", {
      method: "POST",
      headers: {
        "Content-Type": "application/x-www-form-urlencoded",
      },
      body: new URLSearchParams({
        email: userEmail,
        steps: newSteps,
        date: date,
        originalDate: date,
      }),
    })
      .then((response) => {
        if (response.redirected) {
          window.location.href = response.url;
        } else {
          return response.text();
        }
      })
      .then((data) => {
        if (data) {
          window.location.reload();
        }
      })
      .catch((error) => {
        console.error("Hiba:", error);
        alert("Hiba történt a szerkesztés során. Kérlek próbáld újra!");
      });
  }

  function handleNewSteps(userEmail) {
    const stepsInput = document.querySelector("#steps");
    const dateInput = document.querySelector("#date");
    const button = event.target;

    if (!stepsInput || !dateInput) {
      alert("Hiba: Nem találhatók a szükséges mezők!");
      return;
    }

    const stepsToAdd = stepsInput.value.trim();
    const dateToAdd = dateInput.value;

    if (!stepsToAdd || stepsToAdd === "" || parseInt(stepsToAdd) <= 0) {
      alert("Kérlek adj meg egy érvényes lépésszámot!");
      stepsInput.focus();
      return;
    }

    if (!dateToAdd || dateToAdd === "") {
      alert("Kérlek válassz egy dátumot!");
      dateInput.focus();
      return;
    }

    const selectedDate = new Date(dateToAdd);
    const today = new Date();
    today.setHours(0, 0, 0, 0);
    selectedDate.setHours(0, 0, 0, 0);

    const originalButtonText = button.textContent;
    button.disabled = true;
    button.textContent = "Feldolgozás...";
    button.classList.add("opacity-75", "cursor-not-allowed");

    fetch("/stepcounter/view/new", {
      method: "POST",
      headers: {
        "Content-Type": "application/x-www-form-urlencoded",
      },
      body: new URLSearchParams({
        email: userEmail,
        steps: stepsToAdd,
        date: dateToAdd,
      }),
    })
      .then((response) => {
        if (response.redirected) {
          window.location.href = response.url;
        } else {
          return response.text();
        }
      })
      .then((data) => {
        if (data) {
          window.location.reload();
        }
      })
      .catch((error) => {
        console.error("Hiba:", error);
        alert("Hiba történt a lépések rögzítése során. Kérlek próbáld újra!");
        button.disabled = false;
        button.textContent = originalButtonText;
        button.classList.remove("opacity-75", "cursor-not-allowed");
      });
  }
</script>
